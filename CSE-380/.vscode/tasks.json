{
  "version": "2.0.0",
  "tasks": [

    {
      "label": "build Fortran",
      "type": "shell",
      "command": "gfortran",
      "args": [
        "test.f90",
        "-o",
        "test.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc",
      "detail": "Compile Fortran program"
    },

    {
      "label": "run Fortran",
      "type": "shell",
      "command": "./test.exe",
      "dependsOn": "build and run Fortran",
      "problemMatcher": []
    }
  ]
}
