{
  // Keep fortls stable inside your pyenv (no surprise auto-updates)
  "disable_autoupdate": true,

  // Use more threads during initial index (tune to your CPU)
  "nthreads": 8,

  // Quality-of-life
  "use_signature_help": true,
  "hover_signature": true,

  // What to parse (default is "**", but itâ€™s good to exclude build dirs)
  "source_dirs": ["./**"],
  "excl_paths": ["build/**", ".git/**", ".venv/**", "venv/**", "dist/**", "out/**"],

  // Preprocessor support (customize if you have these)
  "include_dirs": ["include", "preprocessor"],
  "pp_defs": {}
}
